{
	"name": "ensphere/authentication",
	"description": "",
	"keywords": ["framework"],
	"license": "MIT",
	"type": "project",
	"require": {
		"laravel/framework": "5.2.*",
		"illuminate/html": "5.*",
		"filp/whoops": "~1.0"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"Ensphere\\Authentication\\": "app/",
			"Libs\\": "libs/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize",
			"npm install",
			"bower install",
			"php artisan ensphere:register",
			"php artisan vendor:publish --force",
			"php artisan ensphere:assets",
			"gulp"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize",
			"bower update",
			"php artisan ensphere:register",
			"php artisan vendor:publish --force",
			"php artisan ensphere:assets",
			"gulp"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
